<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_coordinate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zehava.cityforest.Activitys.CreateNewCoordinateActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTxt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/titleField"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/summary_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summaryTxt"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/SummaryField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/isPointOfInterestTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"

            android:gravity="start|center_vertical"
            android:text="@string/point_of_interest_txt" />

        <CheckBox
            android:id="@+id/isPointOfInterestCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0.2"
            android:gravity="end"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/typeOfPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/cancel_butt"
            tools:ignore="ButtonOrder,ButtonStyle,RtlHardcoded" />

        <Button
            android:id="@+id/saveButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/save_butt"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>
